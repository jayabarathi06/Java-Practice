import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        String a=sc.nextLine().toLowerCase();
        int arr[]=new int[256];
         for(int i=0;i<a.length();i++){
            char c=a.charAt(i);
            arr[c]++;
         }for(int i=0;i<256;i++){
             if((char)i!=' ' && arr[i]!=0)
                 System.out.println((char)i+":"+arr[i]);
             
         }
    }
}
